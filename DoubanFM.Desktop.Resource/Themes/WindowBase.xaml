<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:DoubanFM.Desktop.Resource.Controls">

    <ControlTemplate x:Key="WindowBaseTemplate" TargetType="{x:Type Window}">
        <Grid Background="{TemplateBinding Background}">
            <ContentPresenter/>
        </Grid>
    </ControlTemplate>

    <Style TargetType="{x:Type Controls:WindowBase}">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="Template" Value="{StaticResource WindowBaseTemplate}"/>
    </Style>
</ResourceDictionary>