<Application x:Class="DoubanFM.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:DoubanFM.Common.Converters;assembly=DoubanFM.Common"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        <converters:DoubleToTimeSpanConverter x:Key="DoubleToTimeSpanConverter"/>        
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BooleanNegationToVisibilityConverter x:Key="BooleanNegationToVisibilityConverter"/>
        <converters:BoolToImageConverter x:Key="BoolToImageConverter"/>
            <converters:OrdinaryColorToTranspantConverter x:Key="OrdinaryColorToTranspantConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
