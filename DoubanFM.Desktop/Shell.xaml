<Window x:Class="DoubanFM.Desktop.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:uc="clr-namespace:DoubanFM.Desktop.UserControls"
        Title="Shell"
        Background="SkyBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ItemsControl x:Name="MainRegion" Grid.RowSpan="2"
                  prism:RegionManager.RegionName="MainRegion"/>

        <uc:PlayControl Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
