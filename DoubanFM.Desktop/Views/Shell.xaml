<Window x:Class="DoubanFM.Desktop.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        Title="Shell" Height="500" Width="600" Background="#FF1A1A1A">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <ItemsControl x:Name="MainRegion" 
                  prism:RegionManager.RegionName="MainRegion"/>

        <ItemsControl Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                      prism:RegionManager.RegionName="PlayControlRegion"/>
        <ItemsControl Grid.RowSpan="2" Grid.Column="1" 
                      prism:RegionManager.RegionName="PlayListRegion"/>
    </Grid>

</Window>
