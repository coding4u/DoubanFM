<Window x:Class="DoubanFM.Desktop.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        Title="Shell" Height="Auto" Width="Auto" Background="SkyBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ItemsControl x:Name="MainRegion" Grid.RowSpan="2"
                  prism:RegionManager.RegionName="MainRegion"/>

        <ItemsControl Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                      prism:RegionManager.RegionName="PlayControlRegion"/>
    </Grid>

</Window>
