<Window x:Class="DoubanFM.Desktop.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="DoubanFM" 
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="DragWindow"   
        Background="{x:Null}" 
        WindowStyle="None"
        AllowsTransparency="True">

    <Grid>
        <ItemsControl x:Name="MainRegion" HorizontalAlignment="Center" VerticalAlignment="Center"
                  prism:RegionManager.RegionName="MainRegion"/>

        <!--<ItemsControl Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                      prism:RegionManager.RegionName="PlayControlRegion"/>
        <ItemsControl Grid.RowSpan="2" Grid.Column="1" 
                      prism:RegionManager.RegionName="PlayListRegion"/>-->
    </Grid>

</Window>
