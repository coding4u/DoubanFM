<resLib:WindowBase x:Class="DoubanFM.Desktop.Shell.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:resLib="clr-namespace:DoubanFM.Desktop.ResourceLibrary;assembly=DoubanFM.Desktop.ResourceLibrary"
        Title="DoubanFM" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}" 
        
        >

    <Grid x:Name="Layout" >

        <resLib:AnimatedTabControl >
            <TabItem Header="Cover" Background="Transparent">
                <Grid x:Name="MainPanel">
                    <ItemsControl 
                       prism:RegionManager.RegionName="NowPlayingRegion"/>
                </Grid>
            </TabItem>
            <TabItem Header="Channels" Background="Transparent">
                <Grid Background="Transparent">
                    <ItemsControl 
                        prism:RegionManager.RegionName="ChannelsRegion"/>
                </Grid>
            </TabItem>
            <TabItem Header="Settings" Background="Transparent">
                <ItemsControl 
                    prism:RegionManager.RegionName="SettingsRegion"/>
            </TabItem>
        </resLib:AnimatedTabControl>

    </Grid>
</resLib:WindowBase>
