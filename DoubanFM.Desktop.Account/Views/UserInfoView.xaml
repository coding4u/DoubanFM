<UserControl x:Class="DoubanFM.Desktop.Account.Views.UserInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoubanFM.Desktop.Account.Views"
             xmlns:design="clr-namespace:DoubanFM.Desktop.Account.Design"
             xmlns:extension="clr-namespace:DoubanFM.Desktop.Infrastructure.Extension;assembly=DoubanFM.Desktop.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="260" extension:d.Background="DeepSkyBlue"
             d:DataContext="{d:DesignInstance design:UserInfoDesignViewModel,IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DoubanFM.Desktop.Resource;component/Themes/Common.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <ImageBrush x:Key="DefaultUserImageBrush" ImageSource="pack://application:,,,/DoubanFM.Desktop.Resource;component\Assets\UserDefault.png" Stretch="Uniform"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Width="255">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Border Margin="5" CornerRadius="40" BorderBrush="White" BorderThickness="2" Height="80" Width="80" 
                Background="{StaticResource DefaultUserImageBrush}" ClipToBounds="True">
                <Image Source="{Binding User.Icon}" Stretch="Uniform">
                    <Image.Clip>
                        <EllipseGeometry Center="38,38" RadiusX="38" RadiusY="38"/>
                    </Image.Clip>
                </Image>
            </Border>
            <TextBlock Margin="10" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Foreground="White" FontSize="24"
                       Text="{Binding User.Name}" Width="150" Height="40" TextAlignment="Justify"/>
        </StackPanel>
        <Button Grid.Row="1" Margin="10" Content="{Binding User.PlayedNum}" Style="{StaticResource CustomButtonStyle}" />
        <Button Grid.Row="2" Margin="10" Content="{Binding User.LikedNum}" Style="{StaticResource CustomButtonStyle}"/>
        <Button Grid.Row="3" Margin="10" Content="{Binding User.BannedNum}" Style="{StaticResource CustomButtonStyle}"/>
        <!--<Button Grid.Row="4" Margin="5" Content="{Binding User.}" Style="{StaticResource CustomButtonStyle}"/>-->
    </Grid>
</UserControl>
